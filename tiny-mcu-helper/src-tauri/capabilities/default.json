{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "core:default",
    "opener:default",
    "dialog:default",
    "notification:default",
    "log:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$HOME/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$APPCONFIG/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$APPDATA/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$APPLOCALDATA/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$CONFIG/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$DATA/**",
          "requireLiteralLeadingDot": false
        },
        "fs:allow-remove",
        "fs:allow-read-dir",
        "fs:allow-read-text-file",
        "fs:allow-app-write"
      ]
    }
  ]
}
