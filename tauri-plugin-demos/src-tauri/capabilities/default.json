{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "notification:default",
    "log:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "calc",
          "cmd": "calc"
        },
        {
          "name": "notepad",
          "cmd": "notepad"
        },
        {
          "name": "wmic",
          "cmd": "wmic",
          "args": [
            "process where \"name='tauri_plugin_demos.exe'\" get name, executablepath /value"
          ]
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "*"
        }
      ]
    }
  ]
}
