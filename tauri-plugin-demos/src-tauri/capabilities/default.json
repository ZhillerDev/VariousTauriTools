{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "notification:default",
    "log:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "calc",
          "cmd": "calc"
        },
        {
          "name": "notepad",
          "cmd": "notepad"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "*"
        }
      ]
    }
  ]
}
