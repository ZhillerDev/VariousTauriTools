{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-plugin-demos",
  "version": "0.1.0",
  "identifier": "com.zhiller.tauri-plugin-demos",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-plugin-demos",
        "label": "main",
        "width": 960,
        "height": 560,
        "visible": true,
        "center": true,
        "resizable": true
      },
      {
        "title": "splash",
        "label": "splash",
        "url": "/splash",
        "width": 500,
        "height": 320,
        "visible": false,
        "center": true,
        "resizable": true,
        "alwaysOnTop": false,
        "skipTaskbar": true,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": [
          "SimpChinese",
          "English"
        ],
        "displayLanguageSelector": true
      }
    }
  }
}
